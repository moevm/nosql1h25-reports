{% set title = 'ДИПЛОМАЛ' %}

<!DOCTYPE html>
<html lang="ru">
<head>
    {% block head %}
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta name="description" content="Анализатор студенческих дипломов. Проект по NoSQL"/>
        <meta name="keywords" content="Диплом, Студент, NoSQL, 21, reports"/>
        <meta name="author" content="Рогожин Константин, Пахомов Степан, Волков Иван, Мышкин Николай, Локосов Даниил"/>

        <link rel="icon" type="image/png" href="{{ url_for('static', filename='favicon/favicon-96x96.png') }}"
              sizes="96x96"/>
        <link rel="icon" type="image/svg+xml" href="{{ url_for('static', filename='favicon/favicon.svg') }}"/>
        <link rel="shortcut icon" href="{{ url_for('static', filename='favicon/favicon.ico') }}"/>
        <link rel="apple-touch-icon" sizes="180x180"
              href="{{ url_for('static', filename='favicon/apple-touch-icon.png') }}"/>
        <link rel="manifest" href="{{ url_for('static', filename='favicon/site.webmanifest') }}"/>

        <title>{{ title }}</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="stylesheet"
              href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

        <link rel="stylesheet" href="{{ url_for('static', filename='styles/normalize.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/style.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/header.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/card.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/general_statistics.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/section_stats.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/chapter_filter.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ url_for('static', filename='styles/chapter_table.css') }}" type="text/css"/>
    {% endblock %}
</head>
<body class="page">
<header class="header">
    <div class="header__container">
        <a class="logo" href="{{ url_for('index') }}">
            <img src="{{ url_for('static', filename='logo.png') }}" class="logo__img" alt="logo"/>
            <h1 class="logo__title">{{ title }}</h1>
        </a>
        <nav class="navigation">
            <a class="navigation__button {% if request.endpoint.startswith('diploma') %} navigation__button_current {% endif %}"
               href="{{ url_for('diploma') }}">
                ЗАГРУЗКА ДИПЛОМА
            </a>
            <a class="navigation__button {% if request.endpoint.startswith('search') %} navigation__button_current {% endif %}"
               href="{{ url_for('search') }}">
                ПОИСК
            </a>
        </nav>
    </div>
</header>
<main class="main">
    {% block main %}{% endblock %}
</main>
</body>
</html>