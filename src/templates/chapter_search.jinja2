{% extends "layout.jinja2" %}

{% block head %}
    {{ super() }}
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/chapter_filter.css') }}" type="text/css"/>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/chapter_table.css') }}" type="text/css"/>
{% endblock %}

{% block main %}
    <section class="filters">
        <div class="filters__header-block">
            <h2 class="filters__header">Фильтры</h2>
        </div>
        <form action="/search/chapter" class="filter__form" id="filter__form" method="GET">
            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label">id диплома</label>
                </div>
                <div class="filter-box">
                    <label class="filter-box__label" for="min_id_diploma">от</label>
                    <input class="filter-box__input" type="text" id="min_id_diploma" name="min_id_diploma"
                           value="{{ request.args.get('min_id_diploma', '') }}">
                    <label class="filter-box__label" for="max_id_diploma">до</label>
                    <input class="filter-box__input" type="text" id="max_id_diploma" name="max_id_diploma"
                           value="{{ request.args.get('max_id_diploma', '') }}">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label">id раздела</label>
                </div>
                <div class="filter-box">
                    <label class="filter-box__label" for="min_id">от</label>
                    <input class="filter-box__input" type="text" id="min_id" name="min_id"
                           value="{{ request.args.get('min_id', '') }}">
                    <label class="filter-box__label" for="max_id">до</label>
                    <input class="filter-box__input" type="text" id="max_id" name="max_id"
                           value="{{ request.args.get('max_id', '') }}">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label" for="name">название раздела</label>
                </div>
                <div class="filter-box">
                    <input class="filter-box__input long-input" type="text" id="name" name="name"
                           value="{{ request.args.get('name', '') }}" placeholder="Введите название раздела">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label">водность</label>
                </div>
                <div class="filter-box">
                    <label class="filter-box__label" for="min_water_content">от</label>
                    <input class="filter-box__input" type="text" id="min_water_content" name="min_water_content"
                           value="{{ request.args.get('min_water_content', '') }}">
                    <label class="filter-box__label" for="max_water_content">до</label>
                    <input class="filter-box__input" type="text" id="max_water_content" name="max_water_content"
                           value="{{ request.args.get('max_water_content', '') }}">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label">слов</label>
                </div>
                <div class="filter-box">
                    <label class="filter-box__label" for="min_words">от</label>
                    <input class="filter-box__input" type="text" id="min_words" name="min_words"
                           value="{{ request.args.get('min_words', '') }}">
                    <label class="filter-box__label" for="max_words">до</label>
                    <input class="filter-box__input" type="text" id="max_words" name="max_words"
                           value="{{ request.args.get('max_words', '') }}">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label">символов</label>
                </div>
                <div class="filter-box">
                    <label class="filter-box__label" for="min_symbols">от</label>
                    <input class="filter-box__input" type="text" id="min_symbols" name="min_symbols"
                           value="{{ request.args.get('min_symbols', '') }}">
                    <label class="filter-box__label" for="max_symbols">до</label>
                    <input class="filter-box__input" type="text" id="max_symbols" name="max_symbols"
                           value="{{ request.args.get('max_symbols', '') }}">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label" for="words">частые слова</label>
                </div>
                <div class="list-card">
                    <div class="filter-box">
                        <input class="filter-box__input append-input" type="text" id="words" name="words"
                               value="{{ request.args.get('words', '') }}" placeholder="Введите слово">
                        <button class="filter-box__add-word">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                    <div class="words-container"></div>
                    <input type="hidden" name="words" id="words" value="{{ request.args.get('words', '') }}">
                </div>
            </div>

            <div class="filter-range">
                <div class="label-box">
                    <label class="label-box__label" for="chapters">id подразделов</label>
                </div>
                <div class="list-card">
                    <div class="filter-box">
                        <input class="filter-box__input append-input" type="text" id="chapters" name="chapters"
                               value="{{ request.args.get('chapters', '') }}" placeholder="Введите id раздела">
                        <button class="filter-box__add-word">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                    <div class="words-container"></div>
                    <input type="hidden" name="words" id="words" value="{{ request.args.get('words', '') }}">
                </div>
            </div>

            <button type="submit" class="search-button filters__header-block" onclick="addWord()">Найти</button>
        </form>
    </section>

    <section class="results-block">
        <select name="order_by" form="filter__form" class="sort-chapter" onchange="form.submit()">
            <option value=""
                    {% if request.args.get('order_by', '') == "" %}selected{% endif %}>
                без сортировки
            </option>
            <option value="id"
                    {% if request.args.get('order_by', '') == "id" %}selected{% endif %}>
                id
            </option>
            <option value="id_diploma"
                    {% if request.args.get('order_by', '') == "id_diploma" %}selected{% endif %}>
                id диплома
            </option>
            <option value="water_content"
                    {% if request.args.get('order_by', '') == "water_content" %}selected{% endif %}>
                водность
            </option>
            <option value="words"
                    {% if request.args.get('order_by', '') == "words" %}selected{% endif %}>
                количество слов
            </option>
            <option value="symbols"
                    {% if request.args.get('order_by', '') == "symbols" %}selected{% endif %}>
                количество символов
            </option>
        </select>
        <!-- Блок с результатами -->
        <table class="results-block__table">
            <thead>
            <tr>
                <th>id диплома</th>
                <th>id раздела</th>
                <th>название раздела</th>
                <th>водность (%)</th>
                <th>слов (шт.)</th>
                <th>символов (шт.)</th>
                <th>топ часто встречающихся слов</th>
                <th>дочерние разделы (id)</th>
            </tr>
            </thead>
            <tbody>
            <!-- Здесь будут выводиться данные из базы данных -->
            {% for chapter in chapters %}
                <tr>
                    <td>{{ chapter.id_diploma }}</td>
                    <td>{{ chapter.id }}</td>
                    <td>{{ chapter.name }}</td>
                    <td>{{ chapter.water_content }}</td>
                    <td>{{ chapter.words }}</td>
                    <td>{{ chapter.symbols }}</td>
                    <td>{{ chapter.commonly_used_words|join(", ") }}</td>
                    <td>{{ chapter.chapters|join(", ") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const wordInput = document.querySelector(".filter-box__input");
            const wordList = document.querySelector(".words-container");
            const hiddenWordsInput = document.querySelector("#words");

            // Функция для обновления значения скрытого поля
            function updateHiddenWords() {
                const words = Array.from(wordList.querySelectorAll('.word__text')).map(word => word.textContent.trim());
                hiddenWordsInput.value = words.join(",");
            }

            // Функция для добавления слова
            window.addWord = function () {
                const word = wordInput.value.trim();
                if (word === "") return; // Если поле пустое, ничего не делаем

                // Проверяем, что слово еще не добавлено
                const currentWords = Array.from(wordList.querySelectorAll('.word__text')).map(el => el.textContent.trim());
                if (!currentWords.includes(word)) {
                    // Добавляем новое слово в контейнер
                    wordList.insertAdjacentHTML('beforeend', `
                <span class="word__text">${word}
                    <button class="word__remove" onclick="removeWord(this)">×</button>
                </span>
            `);

                    // Обновляем значение скрытого поля
                    updateHiddenWords();
                }

                // Очищаем поле ввода
                wordInput.value = "";
            };

            // Функция для удаления слова
            window.removeWord = function (button) {
                const wordElement = button.parentElement;
                const word = wordElement.textContent.trim().replace("×", ""); // Удаляем символ "×"

                // Удаляем элемент из DOM
                wordElement.remove();

                // Обновляем значение скрытого поля
                updateHiddenWords();
            };

            // Инициализация: отображение уже добавленных слов при загрузке страницы
            const initialWords = hiddenWordsInput.value.split(",").filter(word => word.trim() !== "");
            initialWords.forEach(word => {
                wordList.insertAdjacentHTML('beforeend', `
            <span class="word__text">${word}
                <button class="word__remove" onclick="removeWord(this)">×</button>
            </span>
        `);
            });

            // Обработка отправки формы
            const form = document.querySelector("form");
            form.addEventListener("submit", function (e) {
                e.preventDefault(); // Остановить стандартную отправку формы

                const formData = new FormData(form);
                const params = new URLSearchParams();

                for (const [key, value] of formData.entries()) {
                    if (value.trim() !== "") { // Если значение не пустое
                        params.append(key, value);
                    }
                }
                const url = form.action + '?' + params.toString();
                window.location.href = url;
            });
        });
    </script>

{% endblock %}
